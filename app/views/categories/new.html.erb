<h1>Create a New Category</h1>

<% if @category.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

    <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_with(model: @category) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <h3>Add Shoes:  </h3>
  <%= f.label :shoe_ids, "Shoes:" %>
  <%= f.collection_check_boxes :shoe_ids, Shoe.all, :id, :brand_and_color %>
  <br>


  <h3>Or Create a New Shoe</h3>
  <%= f.fields_for :shoes do |shoe_field| %>

    <%= shoe_field.label :brand %>
    <%= shoe_field.text_field :brand %>
    <br>
    <%= shoe_field.label :condition %>
    <%= shoe_field.text_field :condition %>
    <br>
    <%= shoe_field.label :color %>
    <%= shoe_field.text_field :color %>
    <br>
    <%= shoe_field.label :price %>
    <%= shoe_field.number_field :price, min:0 %>
    <br>
  <hr>
  <% end %>

  <%= f.submit %>
<% end %>



